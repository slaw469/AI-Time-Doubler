{
  "manifest_version": 3,
  "name": "AI Time Doubler",
  "version": "1.0.0",
  "description": "Eliminate context switching and double your productivity with AI-powered session tracking",
  
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "background",
    "alarms",
    "idle",
    "webNavigation"
  ],
  
  "host_permissions": [
    "http://localhost:*/*",
    "https://localhost:*/*"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Time Doubler"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
} 